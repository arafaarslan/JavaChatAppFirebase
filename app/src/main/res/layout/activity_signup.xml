<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    tools:layout_editor_absoluteX="-53dp"
    tools:layout_editor_absoluteY="-163dp">


    <EditText
        android:id="@+id/signup_user_email_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="email address"
        android:inputType="textPersonName"
        android:text="arafaarslan@gmail.com"
        app:layout_constraintBottom_toTopOf="@+id/signup_password_et"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/signup_password_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="476dp"
        android:ems="10"
        android:hint="password"
        android:text="123456"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/signup_signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Signup"
        app:layout_constraintBaseline_toBaselineOf="@+id/signup_signin_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signup_signin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="280dp"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>